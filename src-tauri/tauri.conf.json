{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "railbreaker",
    "version": "0.1.0",
    "identifier": "dev.markgoodwin.railbreaker",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "RailBreaker",
                "width": 1648,
                "height": 968,
                "minWidth": 1648,
                "minHeight": 968,
                "transparent": false,
                "visible": false,
                "maximized": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["deb", "rpm"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/256x256.png",
            "icons/icons.ico"
        ],
        "resources": ["resources/tracks.csv"]
    }
}
